

<% if logged_in? %>

	<h1>
		<nav class="navbar">
			<ul class="nav navbar-nav">
					<li class="new <%="active" if current_page?(root_path)%>"><%=link_to '新着',root_path%></li>
					<li class="fave <%="active" if current_page?(fave_path)%>"><%=link_to '人気順',fave_path %></li>
					<li class="myfave <%="active" if current_page?(myfave_path)%>"><%=link_to 'お気に入り',myfave_path%></li>
					<li style="display:flex" class="ac <%="active" if current_page?(ac_path)-%>"><%=link_to '成功',ac_path%><%=image_tag 'maru.png',size: '24x24'%></li>
					<li style="display:flex" class="wa <%="active" if current_page?(wa_path)%>"><%=link_to '失敗',wa_path%><%=image_tag 'batu.png',size:'24x24'%></li>
			</ul>
		</nav>
	</h1>


	<div class="container">	
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h3>
					なぞなぞ一覧(
	 			 <%="新着" if current_page?(root_path)%>
			   <%="人気順" if current_page?(fave_path) %>
	 		   <%="お気に入り" if current_page?(myfave_path) %>
				 <%="成功" if current_page?(ac_path) %>
				 <%="失敗" if current_page?(wa_path) %>
				 )
				<div class="nazos"><%=	render 'shared/feed'%></div>
			</div>
	</div>
</div>

<% else %>

<div class="center jumbotron">
	<h1>ようこそ、なぞなぞキングへ!</h1>
	<h2>
		なぞなぞを投稿して、みんなで遊ぼう!
	</h2>

	<p><%=link_to "まずはアカウントを作ってね!",signup_path,class:"square_btn" %><br>
	<%=link_to "または、ログインしてね!",login_path%></p>
</div>


<% end %>
