
<% provide(:title,@user.name) %>
<h1>
<%=@user.name%>のプロフィール
</h1>

<div class="row">
	<div class="container">
	<aside class="col-md-4">
		<section class="user_info">
			<div class="profile">
				<%= gravatar_for @user,{size:90} %>
				おなまえ:<%= @user.name %><br>
				ID:<%=@user.login_id %><br>
				投稿したなぞなぞ:<%= @user.nazos.count %>個<br>
          遊ばれた回数:<%= @user.fighted_num%>回<br>
          解いたなぞ:<%=@user.ac_sum%>問<br>
						もらったハート<%=@user.like_sum%>個<br>
			</div>
		</section>
	</aside>

	<div class="col-md-8 ">
		<% if @user.nazos.any? %>
				<ol class="nazos">
					<%=render @nazos %>
				</ol>
				<%= will_paginate @nazos %>
			<%end %>
		</div>
		</div>
</div>

